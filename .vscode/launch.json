{
   "version": "0.2.0",
   "configurations": [
      {
         "type": "firefox",
         "request": "launch",
         "name": "Firefox Debug",
         "url": "http://localhost:3000",
         "webRoot": "${workspaceFolder}",
         "enableCRAWorkaround": true,
         "reAttach": true,
         "reloadOnAttach": true,
         "reloadOnChange": {
            "watch": "${workspaceFolder}/**/*.ts",
            "ignore": "**/node_modules/**"
         }
      }
   ]
}